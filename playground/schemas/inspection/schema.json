{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "type": "object",
   "properties": {
      "style": {
         "type": "string",
         "enum": ["default", "new-york"]
      },
      "typescript": {
         "type": "boolean",
         "default": true
      },
      "tailwind": {
         "type": "object",
         "properties": {
            "config": {
               "type": "string",
               "description": "This is a description"
            },
            "css": {
               "type": "string"
            },
            "baseColor": {
               "type": "string"
            },
            "cssVariables": {
               "type": "integer",
               "default": true
            },
            "target": {
               "type": "object",
               "properties": {
                  "eslint": {
                     "type": "string"
                  },
                  "node": {
                     "type": "integer"
                  },
                  "version": {
                     "type": "string"
                  }
               }
            }
         },
         "required": ["config", "css", "baseColor", "cssVariables"]
      },
      "framework": {
         "type": "string",
         "enum": ["nuxt", "vite", "laravel", "astro"],
         "default": "vite"
      },
      "aliases": {
         "type": "object",
         "properties": {
            "utils": {
               "type": "string"
            },
            "components": {
               "type": "string"
            },
            "ui": {
               "type": "string"
            }
         },
         "required": ["utils", "components"]
      }
   },
   "required": ["style", "tailwind", "aliases"]
}
